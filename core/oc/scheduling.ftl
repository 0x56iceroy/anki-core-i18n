-time-span-seconds = { $seconds ->
    [one] {$seconds} segonda
   *[other] {$seconds} segondas
  }
-time-span-minutes = { $minutes ->
    [one] {$minutes} minuta
   *[other] {$minutes} minutas
  }
-time-span-hours = { $hours ->
    [one] {$hours} ora
   *[other] {$hours} oras
  }
-time-span-days = { $days ->
    [one] {$days} jorn
   *[other] {$days} jorns
  }
-time-span-months = { $months ->
    [one] {$months} mes
   *[other] {$months} meses
  }
-time-span-years = { $years ->
    [one] {$years} an
   *[other] {$years} ans
  }
